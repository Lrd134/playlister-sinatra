<form action="/songs" method="POST">
<label for="name">Name:</label>
<input type="text" name="song[name]" id="name"/><br>
<% @genres.each do | genre | %>
  <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>"> <%=genre.name%></input>
<% end %><br>
<label for="genre_name">Genre</label>
<input type="text" name="genre[name]" id="genre_name"/><br>
<% @artists.each do | artist | %>
  <input type="radio" name="song[artist_id]" id="<%=artist.name%>" value="<%=artist.id%>"><%=artist.name%></input>
<% end %><br>
<label for="artist_name">Artist Name</label>
<input type="text" name="artist[name]" id="artist_name"/> 
<input type="submit" value="Create"/>

</form>